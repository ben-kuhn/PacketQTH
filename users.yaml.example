# PacketQTH User Configuration
# 
# Generate TOTP secrets using: python tools/setup_totp.py <CALLSIGN>
# This will create a QR code to scan with your authenticator app

users:
  # Example user - replace with your information
  - callsign: KN4XYZ
    totp_secret: JBSWY3DPEHPK3PXP  # REPLACE THIS - generated by setup_totp.py
    enabled: true
    # Optional: User-specific settings
    # max_session_duration: 600  # Override default session timeout
    
  # Another example user
  - callsign: W1ABC
    totp_secret: HXDMVJECJJWSRB3H  # REPLACE THIS
    enabled: true
    
  # Disabled user example
  - callsign: K2DEF
    totp_secret: MNOPQRSTUVWXYZ23  # REPLACE THIS
    enabled: false

# Security Settings
security:
  # Maximum failed authentication attempts before lockout
  max_failed_attempts: 5
  
  # Lockout duration in seconds
  lockout_duration_seconds: 300  # 5 minutes
  
  # Session timeout in seconds (inactivity)
  session_timeout_seconds: 300   # 5 minutes
  
  # TOTP time window tolerance (±N windows, 30 seconds each)
  # Default 1 = ±30 seconds (90 second total window)
  totp_window: 1
